<idea-plugin version="2">
  <id>com.dylowen.gittrunkdiff</id>
  <name>Git Trunk Diff</name>
  <version>0.1</version>
  <vendor email="dyltotheo@gmail.com" url="https://github.com/dylanowen">Dylan Owen</vendor>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <depends>Git4Idea</depends>

  <description><![CDATA[
      Shows a diff of your current git branch and a chosen other branch.
    ]]></description>

  <change-notes><![CDATA[
    ]]>
  </change-notes>



  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->


  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Git Diff" icon="/MainToolWindow/git-icon.png" anchor="bottom" factoryClass="com.dylowen.gittrunkdiff.MainToolWindow" conditionClass="com.dylowen.gittrunkdiff.MainToolWindow"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <project-components>
    <component>
      <interface-class>com.dylowen.gittrunkdiff.GitDiffView</interface-class>
      <implementation-class>com.dylowen.gittrunkdiff.GitDiffView</implementation-class>
    </component>
  </project-components>

</idea-plugin>